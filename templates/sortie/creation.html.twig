{% extends 'base.html.twig' %}

{% block title %}Créer une sortie ! | {{ parent() }}{% endblock %}

{% block body %}
    {%  if  sortieForm.vars.value.id ==null%}
        <h2>Programme ta soirée !</h2>
    {% else %}
        <h2>Modifie ta soirée !</h2>
    {% endif %}
    {{ form_start(sortieForm) }}
    {{ form_row(sortieForm.nom) }}
    {{ form_row(sortieForm.dateHeureDebut) }}
    {{ form_row(sortieForm.duree) }}
    {{ form_row(sortieForm.dateLimiteIscription) }}
    {{ form_row(sortieForm.nbInscriptionsMax) }}
    {{ form_row(sortieForm.lieu) }}
    {{ form_row(sortieForm.site) }}
    {{ form_row(sortieForm.etat) }}
    {{ form_row(sortieForm.participants) }}
    {{ form_row(sortieForm.infosSortie) }}

    <button type="submit" class="btn btn-sm btn-primary">
        {{ sortieForm.vars.value.id == null ? 'Create' : 'Modify' }}
    </button>
    {{ form_end(sortieForm) }}
{% endblock %}
