<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="{{ asset("img/iconetitle.png") }}">
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body class="d-flex flex-column">

<header>
    <div class="container">
        <h1 class="header-logo">
            <a href="{{ path('app_login') }}" title="Sortir.com">
                <img src="{{ asset('img/iconenavbar.png') }}" alt="Logo">Sortïr.com
            </a>
        </h1>
        {% include '_navbar.html.twig' %}
    </div>
</header>
<main class="flex-grow-1">
    {# affiche les messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-{{ label }}  alert-dismissible fade show " role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endfor %}
    {% endfor %}
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>
<footer>
    <div class="container">
    © {{ "now"|date("Y") }} - Sortir.com
    </div>
</footer>

</body>
</html>
